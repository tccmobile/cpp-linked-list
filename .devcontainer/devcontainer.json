{
    "name": "C++ Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ],
            "settings": {
                "cmake.configureOnOpen": true,
                "cmake.configureArgs": [
                    "-DCMAKE_BUILD_TYPE=Debug"
                ]
            }
        }
    },
    "remoteUser": "vscode"
} 